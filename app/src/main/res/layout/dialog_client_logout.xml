<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp"
    style="@style/background_fragment_client_about_layout"
    android:layout_gravity="center"
    android:id="@+id/dialog_client_logout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are You Sure To Exit?"
        android:gravity="center"
        android:textSize="@dimen/_25ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp">

        <ImageButton
            android:id="@+id/dialog_client_logout_ib_confirm"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            style="@style/background_fragment_confirm_order_btn_unchecked"
            app:srcCompat="@drawable/ic_done"/>

        <ImageButton
            android:id="@+id/dialog_client_logout_ib_cancel"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            style="@style/background_fragment_confirm_order_btn_unchecked"
            android:layout_marginStart="@dimen/_100sdp"
            app:srcCompat="@drawable/ic_close_blue"/>

    </LinearLayout>

</LinearLayout>