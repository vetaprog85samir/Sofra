<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    style="@style/background_show_food_list_row_item_layout"
    android:gravity="center_vertical"
    android:layout_margin="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:id="@+id/fragment_notification_row_item_layout_main">

    <ImageView
        android:id="@+id/fragment_notification_row_item_iv_photo_of_notification"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        app:srcCompat="@drawable/ic_notifications_active_black"/>

    <TextView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:textColor="#928E8E"
        android:textSize="@dimen/_15ssp"
        android:text="You have notification"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:id="@+id/fragment_notification_row_item_tv_notification"/>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:srcCompat="@drawable/ic_timer"
        android:id="@+id/fragment_notification_row_item_iv_timer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#928E8E"
        android:textSize="@dimen/_10ssp"
        android:text="5 min ago"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/fragment_notification_row_item_tv_time"/>
</LinearLayout>