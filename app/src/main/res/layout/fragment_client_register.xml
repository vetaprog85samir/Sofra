<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/reg_login"
    android:orientation="vertical"
    android:id="@+id/fragment_client_register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_client_register_iv_client_photo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:src="@drawable/background_user_circle_shape_white" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_client_register_ti_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="  Name">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_identity_white"
                    android:textSize="@dimen/_17ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_client_register_ti_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="  E-mail">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_email"
                    android:textSize="@dimen/_17ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_client_register_ti_mobile_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="  Mobile Number">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_phone_white"
                    android:textSize="@dimen/_17ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/fragment_client_register_sp_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                style="@style/spinner_style_arrow_downward_with_underline"/>

            <Spinner
                android:id="@+id/fragment_client_register_sp_region"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                style="@style/spinner_style_arrow_downward_with_underline"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_client_register_ti_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="  Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:textSize="@dimen/_17ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fragment_client_register_ti_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:hint="  Confirm Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:textSize="@dimen/_17ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/fragment_client_register_btn_register"
                style="@style/background_fragment_complete_order_round_corner_layout_red"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_marginEnd="@dimen/_80sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="  Register"
                    android:drawableLeft="@drawable/ic_exit_to_app"
                    android:textColor="#fff"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>