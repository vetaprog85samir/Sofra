<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Offers"
        android:textSize="@dimen/_20ssp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_restaurant_show_offers_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"/>
    <LinearLayout
        android:id="@+id/fragment_restaurant_show_offers_list_layout_add"
        style="@style/background_fragment_complete_order_round_corner_layout_red"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_25sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Offer"
            android:textColor="#fff"
            android:textSize="@dimen/_20ssp" />

    </LinearLayout>


</LinearLayout>