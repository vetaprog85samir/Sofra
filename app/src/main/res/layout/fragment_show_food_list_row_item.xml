<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_show_food_list_row_item_layout_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="-15dp"
        android:background="@drawable/ic_chicken_fries"
        android:id="@+id/fragment_show_food_list_row_item_iv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        style="@style/background_show_food_list_row_item_layout"
        android:id="@+id/fragment_show_food_list_row_item_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_show_food_list_row_item_tv_name"
            android:textSize="@dimen/_20ssp"
            android:textColor="#E91E63"
            android:text="Chicken Fries"
            android:paddingStart="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_show_food_list_row_item_tv_description"
            android:textSize="@dimen/_10ssp"
            android:textColor="#3F3D3D"
            android:text="Chicken Sauce From Kentucky"
            android:paddingStart="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_show_food_list_row_item_tv_price"
            android:textSize="@dimen/_20ssp"
            android:textColor="#3F3D3D"
            android:text="Price: 20 EGP"
            android:paddingStart="@dimen/_10sdp"/>

    </LinearLayout>

</LinearLayout>