<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:id="@+id/fragment_restaurant_data_container">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fragment_restaurant_data_container_tl_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:tabTextColor="#BE0505"
        android:background="#E6E2E2"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fragment_restaurant_data_container_vp_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>