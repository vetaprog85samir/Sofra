<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/fragment_change_password_et_old_pass"
        style="@style/margin_st_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_above="@+id/fragment_change_password_et_new_pass"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/shape_circle_rect_grey"
        android:hint="old password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp" />

    <EditText
        android:id="@+id/fragment_change_password_et_new_pass"

        style="@style/margin_st_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_above="@+id/fragment_change_password_et_confirm_pass"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/shape_circle_rect_grey"
        android:hint="newpassword"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp" />

    <EditText
        android:id="@+id/fragment_change_password_et_confirm_pass"

        style="@style/margin_st_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/shape_circle_rect_grey"
        android:hint="confirm password"
        android:inputType="textPassword"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_8sdp" />

    <Button
        android:id="@+id/fragment_change_password_bt_change"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_change_password_et_confirm_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:background="@drawable/shape_btn_rectangle"
        android:text="change"
        android:textColor="@color/white" />
</RelativeLayout>