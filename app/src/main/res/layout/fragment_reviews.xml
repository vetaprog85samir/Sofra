<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_15ssp"
        android:textColor="#363535"
        android:text="Glad To Share Comment Or Review"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"/>

    <Button
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        style="@style/background_fragment_complete_order_round_corner_layout_red"
        android:layout_gravity="center"
        android:text="Add Comment Or Review"
        android:textSize="@dimen/_10ssp"
        android:textColor="#FFF"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_reviews_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">


    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>