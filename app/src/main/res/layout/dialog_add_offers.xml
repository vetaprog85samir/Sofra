<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/dark_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_offer_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:textColor="@color/purple"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/dialog_add_offer_rl_image"
            android:layout_width="@dimen/album_dp_80"
            android:layout_height="@dimen/album_dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/album_dp_4"
            android:background="@drawable/shape_circle_white"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_add_offer_ci_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>


        <EditText
            android:id="@+id/dialog_add_offer_et_offer_name"
            style="@style/margin_st_end"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/shape_circle_rect_grey"
            android:hint="offer name"
            android:lines="1"
            android:paddingStart="@dimen/_16sdp" />

        <EditText
            android:id="@+id/dialog_add_offer_et_offer_des"
            style="@style/margin_st_end"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/shape_circle_rect_grey"
            android:hint="offer description"
            android:paddingStart="@dimen/_16sdp" />

        <EditText
            android:id="@+id/dialog_add_offer_et_price"
            style="@style/margin_st_end"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/shape_circle_rect_grey"
            android:hint="price"
            android:inputType="number"
            android:paddingStart="@dimen/_16sdp" />

        <EditText
            android:id="@+id/dialog_add_offer_et_offer_price"
            style="@style/margin_st_end"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/shape_circle_rect_grey"
            android:hint="offer price"
            android:inputType="number"
            android:paddingStart="@dimen/_16sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:gravity="center"
                android:text="from"
                android:textColor="@color/purple"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_add_offer_tv_date_from"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:drawableEnd="@drawable/ic_calendar_alt_solid"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:textColor="@color/purple" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:gravity="center"
                android:text="to"
                android:textColor="@color/purple"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_add_offer_tv_date_to"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_50sdp"
                android:drawableEnd="@drawable/ic_calendar_alt_solid"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_4sdp"
                android:paddingEnd="@dimen/_4sdp"
                android:textColor="@color/purple" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_add_offer_bt_add"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/shape_btn_rectangle"
            android:text="add"
            android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>