<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:layout_margin="@dimen/_20sdp"
    style="@style/background_fragment_complete_order_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_restaurant_pending_orders_row_item_layout_main">

        <ImageView
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_perm_identity_black"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_get_food_item_layout"
            android:id="@+id/fragment_restaurant_pending_orders_row_item_iv_client_photo"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#494545"
                android:textSize="@dimen/_13ssp"
                android:text="Client: Mazen Mohammed"
                android:textStyle="bold"
                android:id="@+id/fragment_restaurant_pending_orders_row_item_tv_client_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D80909"
                android:textSize="@dimen/_10sdp"
                android:text="Order No: 22631"
                android:layout_marginTop="@dimen/_5ssp"
                android:id="@+id/fragment_restaurant_pending_orders_row_item_tv_order_number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D80909"
                android:textSize="@dimen/_10sdp"
                android:text="Total Fees: 110 EGP"
                android:layout_marginTop="@dimen/_5ssp"
                android:id="@+id/fragment_restaurant_pending_orders_row_item_tv_total_fees"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D80909"
                android:textSize="@dimen/_10sdp"
                android:text="Address: Giza - Cairo University"
                android:layout_marginTop="@dimen/_5ssp"
                android:id="@+id/fragment_restaurant_pending_orders_row_item_tv_address"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            style="@style/background_fragment_complete_order_round_corner_layout_red"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fragment_restaurant_pending_orders_row_item_layout_call">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Call"
                android:drawableStart="@drawable/ic_phone_white"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            style="@style/background_fragment_complete_order_round_corner_layout_green"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fragment_restaurant_pending_orders_row_item_layout_accept">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Accept"
                android:drawableStart="@drawable/ic_thumb_up"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            style="@style/background_fragment_complete_order_round_corner_layout_purple"
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/fragment_restaurant_pending_orders_row_item_layout_cancel">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Cancel"
                android:drawableStart="@drawable/ic_close"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="@dimen/_8ssp"
                android:layout_marginStart="@dimen/_5sdp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>