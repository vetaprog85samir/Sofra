<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        style="@style/background_get_food_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/fragment_show_food_list_row_item_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginStart="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_9sdp"
            android:layout_marginBottom="-60dp" />


        <LinearLayout
            android:id="@+id/fragment_show_food_list_row_item_layout"
            style="@style/background_show_food_list_row_item_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_show_food_list_row_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_show_food_list_row_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fragment_show_food_list_row_item_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Special Order"
        android:layout_margin="@dimen/_20sdp"
        android:textSize="@dimen/_20ssp"/>
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fragment_show_food_list_row_item_ti_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        style="@style/background_show_food_list_row_item_layout"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_8sdp"
            android:background="@null"
            android:hint="Insert Your Order Here"
            android:gravity="top"/>

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/_6sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:text="Number Of Orders"
            android:textSize="@dimen/_10ssp"
            android:textColor="#555252"/>
        <ImageButton
            android:id="@+id/fragment_show_food_list_row_item_btn_add"
            style="@style/background_get_food_item_iv_add"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
        <TextView
            android:id="@+id/fragment_show_food_list_row_item_tv_quantity"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:textColor="#555252"
            android:textSize="@dimen/_10ssp"
            android:gravity="center"
            style="@style/text_view_round_corner_white"/>
        <ImageButton
            android:id="@+id/fragment_show_food_list_row_item_btn_minus"
            style="@style/background_get_food_item_iv_remove"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_show_food_list_row_item_btn_cart"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        style="@style/background_get_food_item_iv_cart"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

</LinearLayout>