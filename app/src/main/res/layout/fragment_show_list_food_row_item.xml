<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_16sdp"
    android:id="@+id/fragment_show_list_food_row_item">

    <LinearLayout
        android:id="@+id/fragment_show_list_food_row_item_ll_image"
        style="@style/margin_st_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/shape_rect_list">

        <ImageView
            android:id="@+id/fragment_show_list_food_row_item_iv_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/items_restaurant_details_list_ll_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:layout_below="@id/fragment_show_list_food_row_item_ll_image"
        android:layout_marginStart="@dimen/_20ssp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@drawable/shape_rect_list"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_show_list_food_row_item_tv_name"
            style="@style/margin_st_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="start"
            android:textColor="#E91E63"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_show_list_food_row_item_tv_item_description"
            style="@style/margin_st_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="start"
            android:textColor="#858181"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_show_list_food_row_item_tv_cost"
            style="@style/margin_st_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="start"
            android:textColor="#9C27B0"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>