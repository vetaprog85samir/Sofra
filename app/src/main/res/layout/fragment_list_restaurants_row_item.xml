<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    android:id="@+id/fragment_list_restaurants_row_item">

    <RelativeLayout
        style="@style/margin_st_end"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_text_round_corner_grey">

        <LinearLayout
            android:id="@+id/fragment_list_restaurants_row_item_ll"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_list_restaurants_row_item_tv_restaurant_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="#F00909"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_list_restaurants_row_item_tv_restaurant_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_online_state"
                android:gravity="center"
                android:textColor="#8D8B8B"
                android:textSize="@dimen/_14ssp" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/fragment_list_restaurants_row_item_rb_rate"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@+id/fragment_list_restaurants_row_item_ll"
            android:layout_marginStart="@dimen/_55sdp"
            android:isIndicator="true"
            android:scaleX=".5"
            android:scaleY=".5"
            android:layout_marginTop="@dimen/_8sdp" />
        <TextView
            android:id="@+id/fragment_list_restaurants_row_item_tv_mim_order"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/fragment_list_restaurants_row_item_rb_rate"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:textColor="#8D8A8A"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/fragment_list_restaurants_row_item_tv_del_cost"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_list_restaurants_row_item_tv_mim_order"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:textColor="#838080"
            android:textSize="@dimen/_14ssp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/shape_circle_white"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_list_restaurants_row_item_ci_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Restaurant Image" />
    </RelativeLayout>

</RelativeLayout>


