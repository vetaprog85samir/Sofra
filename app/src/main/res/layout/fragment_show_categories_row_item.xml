<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_show_categories_row_item_layout_main">
    
    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="@null"
        app:dragEdge="right"
        app:mode="same_level">

        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/ic_edit_green"
                android:id="@+id/fragment_show_categories_row_item_iv_edit"/>
            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:srcCompat="@drawable/ic_delete_red"
                android:id="@+id/fragment_show_categories_row_item_iv_delete"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            style="@style/background_show_food_list_row_item_layout"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:srcCompat="@drawable/ic_pizza_min"
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/fragment_show_categories_row_item_iv_category"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:textColor="#000"
                android:text="Pizza"
                android:id="@+id/fragment_show_categories_row_item_tv_category"/>
        </LinearLayout>



    </com.chauthai.swipereveallayout.SwipeRevealLayout>

</LinearLayout>