<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_310sdp"
    android:background="@drawable/shape_circle_rect_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logout_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:textColor="@color/purple"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/logout_dialog_cancel"
            android:layout_width="@dimen/album_dp_35"
            android:layout_height="@dimen/album_dp_35"
            android:layout_gravity="end"
            android:background="@drawable/shape_circle_white"
             />

        <View
            style="@style/margin_st_end"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/logout_dialog_ok"
            android:layout_width="@dimen/album_dp_35"
            android:layout_height="@dimen/album_dp_35"
            android:layout_gravity="start"
            android:background="@drawable/shape_circle_white"
             />
    </LinearLayout>

</LinearLayout>