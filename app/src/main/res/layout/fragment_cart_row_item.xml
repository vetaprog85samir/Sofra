<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_cart_row_item_layout_main">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:id="@+id/fragment_cart_row_item_iv_photo_of_order"/>

    <LinearLayout
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_cart_row_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="#555252"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555252"
                android:textSize="@dimen/_10ssp"
                android:id="@+id/fragment_cart_row_item_tv_price_of_order"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/_8sdp"
                android:paddingBottom="@dimen/_6sdp"
                android:text="Number Of Orders"
                android:textColor="#555252"
                android:textSize="@dimen/_10ssp" />

            <ImageButton
                style="@style/background_get_food_item_iv_add"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/fragment_cart_row_item_btn_plus"/>

            <TextView
                style="@style/text_view_round_corner_white"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_20sdp"
                android:gravity="center"
                android:textColor="#555252"
                android:textSize="@dimen/_7ssp"
                android:id="@+id/fragment_cart_row_item_tv_number_of_orders"/>

            <ImageButton
                style="@style/background_get_food_item_iv_remove"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/fragment_cart_row_item_btn_minus"/>


        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/fragment_cart_row_item_btn_remove"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        style="@style/background_fragment_cart_row_item_btn_close"/>

</LinearLayout>